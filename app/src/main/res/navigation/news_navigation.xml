<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_navigation"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="ru.example.andoid_app_news.ui.fragment.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_selectedNewsFragment2"
            app:destination="@id/selectedNewsFragment2" >
            <argument
                android:name="SELECTED_NEWS"
                app:argType="ru.example.andoid_app_news.model.data.News" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/selectedNewsFragment2"
        android:name="ru.example.andoid_app_news.ui.fragment.SelectedNewsFragment"
        android:label="fragment_selected_news"
        tools:layout="@layout/fragment_selected_news" />
</navigation>