<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_layout_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Record-breaking suspension bridge set to open in Yunnan, China"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:scrollbars="none"
        app:layout_constraintEnd_toStartOf="@+id/newsImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_margin="10dp"
        android:text="28 September 2022"
        android:textSize="12sp"
        android:textColor="@color/news_subtitle_color"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/news_source"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_margin="10dp"
        android:gravity="end"
        android:text="Lenta.ru"
        android:textColor="@color/news_subtitle_color"
        android:scrollbars="none"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/newsImageView" />


    <ImageView
        android:id="@+id/newsImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>